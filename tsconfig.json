{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "es2017", "esnext.array", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/e2eHelpers.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.e2e.ts",
    "src/**/*.accessibility.ts",
    "src/visualRegressionTest.ts"
  ]
}
